	<modelVersion>4.0.0</modelVersion>
	<groupId>kcsaba.vision</groupId>
	<version>1.0.1</version>
	<artifactId>PlyFormat</artifactId>
	<packaging>jar</packaging>
	<name>PlyFormat</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<offlineLinks>
						<offlineLink><url>../Matrix</url><location>${vision-javadoc-path}/Matrix</location></offlineLink>
						<offlineLink><url>../GeometryData</url><location>${vision-javadoc-path}/GeometryData</location></offlineLink>
					</offlineLinks>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>kcsaba</groupId>
			<artifactId>Matrix</artifactId>
			<version>2.0.0</version>
		</dependency>
		<dependency>
			<groupId>kcsaba.vision</groupId>
			<artifactId>GeometryData</artifactId>
			<version>1.1.1</version>
		</dependency>
	</dependencies>

</project>
